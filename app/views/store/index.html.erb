<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<h1>Store</h1>
<h2>Our pragmatic catalog</h2>

<ul class='catalog'>
    <% @products.each do |product| %>
    <li>
    <%= image_tag(product.image_url) %>
      <h2><%= product.title %></h2>
      <p>
        <%= sanitize(product.description) %>
      </p>
      <div class="price">
        <%= product.price %>
      </div>
    </li>
  <% end %>
</ul>
